{
  "name": "serverless-typescript-template",
  "version": "0.0.0",
  "description": "Opinionated Serverless Framework template for TypeScript",
  "main": "serverless.ts",
  "scripts": {
    "dev": "serverless offline --stage dev",
    "test": "jest --coverage",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@middy/core": "4.7.0",
    "@middy/http-json-body-parser": "4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.6",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@serverless/typescript": "4.18.2",
    "@types/aws-lambda": "8.10.153",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.8",
    "esbuild": "0.19.12",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "json-schema-to-ts": "3.1.1",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "semantic-release": "24.2.9",
    "serverless": "3.40.0",
    "serverless-esbuild": "1.55.1",
    "serverless-offline": "13.9.0",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "type-fest": "4.41.0",
    "typescript": "5.9.3"
  },
  "author": "Ryan Walters",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      {
        "name": "production"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
